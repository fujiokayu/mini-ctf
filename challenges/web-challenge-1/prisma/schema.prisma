datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  role      String
  note      String?
  adminNote String?
  Feedback  Feedback[]
}

model Feedback {
  id      Int    @id @default(autoincrement())
  message String
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}