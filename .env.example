# CTFd Secret Key (Generate a strong random string)
SECRET_KEY=your-very-secure-secret-key-here-change-this

# Database Password
POSTGRES_PASSWORD=your-postgres-password-here

# CTF Configuration
CTFD_NAME=Mini CTF 2025
CTFD_DESCRIPTION=Small scale in-house CTF
CTFD_ADMIN_USER=admin
CTFD_ADMIN_EMAIL=admin@example.com
CTFD_ADMIN_PASSWORD=admin-password-change-this

# Challenge URLs (if different from defaults)
CHALLENGE_1_URL=http://localhost:8001
CHALLENGE_2_URL=http://localhost:8002
CHALLENGE_3_URL=http://localhost:8003
CHALLENGE_4_URL=http://localhost:8004
CHALLENGE_5_URL=http://localhost:8005

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=./certs/ctf.crt
SSL_KEY_PATH=./certs/ctf.key

# Timezone
TZ=Asia/Tokyo

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO